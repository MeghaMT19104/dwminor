<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:padding="15dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="NAME:"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/name"
            android:hint="Name"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="ROLL NUMBER:"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="roll no of student"
            android:id="@+id/rollno"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="CURRENT CGPA:"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="current CGPA"
            android:id="@+id/cgpa"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="CREDITS COMPLETED:"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="total credits completed"
            android:id="@+id/creditcompleted"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="CREDITS_LEFT"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="fill_parent"
            android:hint="credits left"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/creditsleft"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="SUBJECTS ALREADY TAKEN:"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="fill_parent"
            android:hint="subjects taken till now"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/subjects"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="ELECTIVE SUBJECTS SELECTED THIS SEMESTER"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sub"
            android:visibility="gone"
            android:text="No subjects are selected yet !!"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/subjectstaken"
            android:visibility="gone"
            >

        </ListView>
        <Button
            android:id="@+id/slne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT NEW ELECTIVE COURSES"
            android:layout_gravity="center"/>
    </LinearLayout>


</LinearLayout>